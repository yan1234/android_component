<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!--　主界面区域包含两个列表,左边的为内容,右边的为字符索引列表 -->
    <!--　主内容列表 -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_rv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/fragment_lv_index"></android.support.v7.widget.RecyclerView>

    <!-- 字符索引列表 -->
    <ListView
        android:id="@+id/fragment_lv_index"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:dividerHeight="0dp"
        android:divider="#00000000"></ListView>



    <!-- 中心的索引预览 -->
    <TextView
        android:id="@+id/fragment_tv_preview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="40sp"
        android:background="@color/blue"
        android:text="A"/>

</RelativeLayout>