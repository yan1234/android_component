<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--　定义取消按钮和listview的背景 -->
    <item android:state_pressed="true">
        <shape>
            <!-- 4个角都是圆角 -->
            <corners android:radius="@dimen/bottom_menu_bg_corner"></corners>
            <solid android:color="@color/bottom_menu_bg_pressed"></solid>
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="@dimen/bottom_menu_bg_corner"></corners>
            <solid android:color="@color/bottom_menu_bg_common"></solid>
        </shape>
    </item>

</selector>