<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 定义最后一个选项的bg -->
    <item android:state_pressed="true">
        <shape>
            <!-- 设置上面的圆角　-->
            <corners
                android:bottomLeftRadius="@dimen/bottom_menu_bg_corner"
                android:bottomRightRadius="@dimen/bottom_menu_bg_corner"></corners>

            <!--　设置填充 -->
            <solid android:color="@color/bottom_menu_bg_pressed"></solid>

        </shape>
    </item>
    <item>
        <shape>
            <!-- 设置上面的圆角　-->
            <corners
                android:bottomLeftRadius="@dimen/bottom_menu_bg_corner"
                android:bottomRightRadius="@dimen/bottom_menu_bg_corner"></corners>

            <!--　设置填充 -->
            <solid android:color="@color/bottom_menu_bg_common"></solid>

        </shape>
    </item>

</selector>