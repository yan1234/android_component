<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--　设置bottom_menu_item　的基本样式 -->
    <style name="bottom_menu_item">
        <item name="android:layout_height">@dimen/bottom_menu_item_height</item>
        <item name="android:textColor">@color/bottom_menu_item_text</item>
        <item name="@android:textSize">@dimen/bottom_menu_item_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 添加一组进出动画 -->
    <style name="bottom_menu_animation">
        <item name="android:windowEnterAnimation">@anim/bottom_menu_appear</item>
        <item name="android:windowExitAnimation">@anim/bottom_menu_disappear</item>
    </style>

</resources>
